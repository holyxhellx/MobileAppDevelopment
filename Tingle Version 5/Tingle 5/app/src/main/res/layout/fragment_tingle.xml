<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:clickable="true"
              android:focusableInTouchMode="true"
              android:orientation="vertical"
              android:weightSum="1">

    <!-- Button to add/delete things -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:clickable="true"
                  android:focusableInTouchMode="true"
                  android:orientation="horizontal" >
        <Button
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:layout_marginTop="5dp"
            android:text="@string/save_button"/>

        <Button
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:layout_marginTop="5dp"
            android:text="@string/delete_button"/>

    </LinearLayout>

    <!-- What new thing -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:clickable="true"
                  android:focusableInTouchMode="true"
                  android:gravity="bottom"
                  android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="@string/last_thing_text"/>

        <TextView
            android:id="@+id/last_thing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:text="@string/last_thing"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:clickable="true"
                  android:focusableInTouchMode="true"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                  android:orientation="horizontal" >

        <EditText
            android:id="@+id/what_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/what_thing"
            android:inputType="text"
            android:maxLines="1"
            android:nextFocusDown="@+id/where_text"
            android:imeOptions="actionNext"/>
    </LinearLayout>

    <!-- Where -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:clickable="true"
                  android:focusableInTouchMode="true"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                  android:orientation="horizontal" >

        <EditText
            android:id="@+id/where_text"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:padding="15dp"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/where_thing"
            android:inputType="text"
            android:maxLines="1"
            android:imeOptions="actionDone"/>

    </LinearLayout>

    <TextView
        android:layout_width="285dp"
        android:layout_height="56dp"
        android:paddingTop="5dp"
        android:text="@string/scanner_text_description"
        android:id="@+id/textView"
        />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:clickable="true"
                  android:focusableInTouchMode="true"
                  android:orientation="horizontal"
                  android:weightSum="1"
                  android:id="@+id/linearLayout2"
                  android:gravity="center_horizontal"
                  android:layout_alignParentLeft="true"
                  android:layout_alignParentStart="true"
                  android:layout_alignParentBottom="true">

        <Button
            android:text="Scan QR"
            android:id="@+id/scanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"/>

        <Button
            android:text="Scan BAR"
            android:id="@+id/scanner2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>